<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="ButtonAuthVK" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorButtonVK</item>
    </style>
    <style name="ButtonAuthEmail" parent="ThemeOverlay.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NumberPickerDefault">
        <item name="android:colorControlNormal">@color/colorPrimary</item>
        <item name="android:solidColor">@color/colorTextWhite</item>
        <item name="android:background">@color/colorTextWhite</item>
    </style>

    <style name="InputLabel">
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:textSize">@dimen/input_label</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="InputLabelLight">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/input_label</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="InputEditText">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/colorTextDark</item>
        <item name="android:colorActivatedHighlight">@color/colorPrimary</item>
    </style>

</resources>
