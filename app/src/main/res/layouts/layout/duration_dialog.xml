<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/colorTextWhite"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center">

        <NumberPicker
            android:id="@+id/timepicker_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/NumberPickerDefault"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"
            android:textSize="20sp"
            android:text=":"/>

        <NumberPicker
            android:id="@+id/timepicker_seconds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/NumberPickerDefault"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/timepicker_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/speak_up_btn"
            android:textColor="@color/colorTextWhite"
            android:text="@string/dialog_button_negarive"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/timepicker_button_ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/speak_up_btn"
            android:textColor="@color/colorTextWhite"
            android:layout_margin="5dp"
            android:text="@string/dialog_button_positive"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>